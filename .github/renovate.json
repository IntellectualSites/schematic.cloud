{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":semanticCommitsDisabled"],
  "labels": ["dependencies"],
  "rebaseWhen": "conflicted",
  "automerge": true,
  "packageRules": [
    {
      "matchPackageNames": ["node"],
      "versioning": "node"
    },
    {
      "matchDatasources": ["npm"],
      "stabilityDays": 3
    }
  ],
  "schedule": ["on the first day of the month"]
}
